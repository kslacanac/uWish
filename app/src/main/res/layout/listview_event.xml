<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:paddingTop="12dp"
    android:weightSum="1"
    android:descendantFocusability="blocksDescendants"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/host_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:textColor="@color/textColorPrimary"
        android:text="Amelie created an event!"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/host_name"
        android:layout_marginTop="18dp"
        android:id="@+id/iconLeft"
        android:src="@drawable/ic_other_cat"
        />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_name"
        android:layout_below="@id/host_name"
        android:text="Name"
        android:layout_toRightOf="@id/iconLeft"
        android:textSize="24sp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="18dp"
        android:textColor="@color/textColorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_string"
        android:text="Date: "
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:layout_below="@id/event_name"
        android:layout_toRightOf="@id/iconLeft"
        android:textColor="@color/textColorSecondary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_date"
        android:text="Date"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@id/date_string"
        android:layout_below="@id/event_name"
        android:textColor="@color/textColorSecondary" />

    <ImageButton
        android:id="@+id/accept_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/event_date"
        android:padding="5dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_done_black_24dp"/>
    <ImageButton
        android:id="@+id/reject_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/accept_btn"
        android:layout_below="@id/event_date"
        android:padding="5dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_close_black_24dp"/>

    <!--<ImageButton
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="4dp"
        android:padding="5dp"
        android:background="#00ffffff"
        android:src="@drawable/delete"/>

    <ImageButton
        android:id="@+id/edit_btn"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/delete_btn"
        android:background="#00ffffff"
        android:src="@drawable/edit"
        />-->

</RelativeLayout>
