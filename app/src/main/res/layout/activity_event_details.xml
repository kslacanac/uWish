<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_event_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="hr.spacecontrol.uwish.activities.EventDetailsActivity">

    <TextView
        android:text="Event name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_name"
        android:textSize="36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/textColorPrimary"
        android:background="@drawable/border"
        android:paddingBottom="12dp"/>

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/event_date"
        android:textSize="24dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/event_name"
        android:layout_centerHorizontal="true"
        android:textColor="@color/textColorSecondary"/>

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/event_description"
        android:layout_toRightOf="@+id/event_description"
        android:layout_toEndOf="@+id/event_description"
        android:id="@+id/event_time"
        android:textSize="20dp"/>

    <TextView
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam egestas ornare metus. Maecenas id est quis leo iaculis aliquam. Praesent ante mi, tincidunt sit amet malesuada at, sodales quis quam. Proin consequat eros ac erat condimentum, ac fermentum magna ultricies. Curabitur aliquam tortor rutrum tincidunt luctus. Vestibulum leo mi, commodo. "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:id="@+id/event_description"
        android:textSize="15dp"/>

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/invite_list"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/event_description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
