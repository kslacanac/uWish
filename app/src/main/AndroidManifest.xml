<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hr.spacecontrol.uwish">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".activities.MainActivity"
            android:label="Home"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.EventDetailsActivity"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.ItemDetailsActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.FriendDetailsActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.ProfileActivity"
            android:parentActivityName=".activities.MainActivity" />
        <activity android:name=".activities.MakeAWishActivity" />
        <activity android:name=".activities.CreateEventActivity" />
        <activity android:name=".activities.ManagePrivacyActivity"></activity>

    </application>

</manifest>